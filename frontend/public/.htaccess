<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Se o arquivo ou diretório existir, sirva-o diretamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Caso contrário, redirecione para o index.html (SPA Fallback)
  RewriteRule ^ index.html [L]
</IfModule>
